{
    "version": "0.2.0",
    "configurations": [
        {
            // Rust run/debug
            "type": "lldb",
            "request": "launch",
            "name": "Cargo launch",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path","./rs/Cargo.toml"
                ]
            },
            "cwd": "${workspaceFolder}/rs",
            "relativePathBase": "${workspaceFolder}/rs",
            "args": []
        },
        {
            // C# run/debug
            "name": ".NET Core",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-dotnet",
            "windows": {
                //"program": "${workspaceFolder}/cs/bin/Debug/net7.0/win-x64/aoc2022.dll",
                "program": "${workspaceFolder}/cs/bin/Debug/net7.0/aoc2022.dll",
            },
            "linux": {
                //"program": "${workspaceFolder}/cs/bin/Debug/net7.0/linux-x64/aoc2022.dll",
                "program": "${workspaceFolder}/cs/bin/Debug/net7.0/aoc2022.dll",
            },
            "args": [],
            "cwd": "${workspaceFolder}/cs",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            // C# run/debug for the fetch app
            "name": ".NET Core (Fetch)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-fetch",
            "windows": {
                "program": "${workspaceFolder}/fetch/bin/Debug/net7.0/win-x64/fetch-aoc-data.dll",
            },
            "linux": {
                "program": "${workspaceFolder}/fetch/bin/Debug/net7.0/linux-x64/fetch-aoc-data.dll",
            },
            "args": [ "1" ],
            "cwd": "${workspaceFolder}/fetch",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            // Python run/debug
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/py",
        },
    ]
}